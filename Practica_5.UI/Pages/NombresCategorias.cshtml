@page
@model Practica_5.UI.Pages.NombresCategoriasModel
@{
}N

<h1>Categorias de los productos registrados</h1>
<br />
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre Categoria</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in Model.Productos)
            {
                <tr>
                    <td>@prod.categoriaId</td>
                    <td>@prod.nombre</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-page="./Index">Volver al listado</a>